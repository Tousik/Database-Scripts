DROP VIEW VW_TRACKER_REQUISITION_FABRIC;
CREATE VIEW VW_TRACKER_REQUISITION_FABRIC
AS
select  category_planning_id, product_codes, production_type, plan_item_code, transaction_id, category_name, style_code, color_code, fabric_code, fabric_name, fabric_type, unit_std_width,
(CASE 
WHEN custom='N' THEN fabric_issue_min_date 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_issue_min_date
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_issue_min_date
END) AS Issue_Min_Date,
(CASE 
WHEN custom='N' THEN fabric_issue_max_date 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_issue_max_date
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_issue_max_date
END) AS Issue_Max_Date,
(CASE 
WHEN custom='N' THEN fabric_delivery_min_date 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_delivery_min_date
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_delivery_min_date
END) AS Delivery_Min_Date,
(CASE 
WHEN custom='N' THEN fabric_delivery_max_date 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_delivery_max_date
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_delivery_max_date
END) AS Delivery_Max_Date,
(CASE 
WHEN custom='N' THEN asis_fabric_total_length_metre 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_total_length_metre
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_total_length_metre
END) AS Fabric_Total_Length_Metre,
(CASE 
WHEN custom='N' THEN asis_fabric_total_width_inch 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_total_width_inch
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_total_width_inch
END) AS Fabric_Total_Width_Inch,
(CASE 
WHEN custom='N' THEN asis_fabric_total_shrinkage_metre 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_total_shrinkage_metre
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_total_shrinkage_metre
END) AS Fabric_Total_Shrinkage_Metre,
(CASE 
WHEN custom='N' THEN asis_fabric_total_pcs 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_total_pcs
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_total_pcs
END) AS Fabric_Total_Pcs,
(CASE 
WHEN custom='N' THEN asis_fabric_total_measurement 
WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_fabric_total_measurement
WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_fabric_total_measurement
END) AS Fabric_Total_Measurement,
sc_planning_main_item_id, style_ccode_id, sc_asis_plan_fabric_item_id, cat_custom_plan_fabric_item_id,sc_custom_dept_plan_fabric_item_id,
custom, cat_custom_dept_changed,asis_dept_changed
 from 
(
	select 
	cat.*,
        sc_custom_dept_plan_fabric_item_id,
	dept_custom_fabric_total_length_metre,
	dept_custom_fabric_total_width_inch,
	dept_custom_fabric_total_shrinkage_metre,
	dept_custom_fabric_total_pcs,
	dept_custom_fabric_total_measurement,
	dept_custom_fabric_issue_min_date,
	dept_custom_fabric_issue_max_date,
	dept_custom_fabric_delivery_min_date,
	dept_custom_fabric_delivery_max_date 
	from vw_notification_asis_cat_custom_fabric cat
	 LEFT JOIN vw_notification_asis_dept_custom_fabric dept 
	ON cat.transaction_id=dept.transaction_id 
	AND cat.cat_custom_plan_fabric_item_id=dept.sc_custom_plan_fabric_item_id
) vw_notification_fabric 
order by category_planning_id;
